class Book:
    def __init__(
            self,
            book_title: str,
            book_author: str,
    ):
        self.book_title = book_title
        self.book_author = book_author


class Library:
    def __init__(self):
        self.books = []

    def add_book(self, book_title, book_autor):
        book = Book(book_title, book_autor)
        self.books.append(book)

    def remove_book(self):
        self.books.remove(book)

    def __contains__(self, item):
        return item in self.books

    def __getitem__(self, index):
        return self.books[index]


library = Library()
library.add_book("Книга 1", "Автор 1")
library.add_book("Книга 2", "Автор 2")
library.add_book("Книга 3", "Автор 1")


print("Книга 1 в библиотеке:", "Книга 1" in library)
print("Книга 2 в библиотеке:", "Книга 2" in library)


book = library[0]
print(f"Первая книга: {book.book_title}, {book.book_author}")
